---
import NewArticle from "@/components/home/NewArticle.astro";
import ExcitingActive from "@/components/home/ExcitingActive.astro";
import NewAnn from "@/components/home/NewAnn.astro";
import HotCourse from "@/components/home/HotCourse.astro";
import FollowUs from "@/components/home/FollowUs.astro";
---

<div class="p-[2.5rem] pt-[0.5rem] pb-[5rem] flex justify-center bg-base-100">
  <div class="flex arbox text-left">
    <div class="home-article-box mr-[24px]">
      <NewArticle />
      <ExcitingActive />
    </div>
    <div class="home-ann-box">
      <NewAnn />
      <HotCourse />
      <FollowUs />
    </div>
  </div>
</div>
<style is:global>
  .arbox {
    width: 85.125rem;
  }
  .home-article-box {
    width: 60%;
  }
  .home-ann-box {
    flex: 1;
  }

  @media (max-width: 50rem) {
    .arbox {
      width: 100%;
      flex-wrap: wrap;
    }
    .home-article-box {
      width: 100%;
      margin-right: 0;
    }
    .home-ann-box {
      width: 100%;
    }
  }

  @media (min-width: 50rem) and (max-width: 86rem) {
    .arbox {
      width: 100%;
      flex-wrap: wrap;
    }
    .home-article-box {
      width: 100%;
      margin-right: 0;
    }
    .home-ann-box {
      width: 100%;
    }
  }
</style>
