import { useTranslations } from "@i18n/util";

function formatDate(dateString) {
  const options: Intl.DateTimeFormatOptions = {
    // year: "numeric",
    month: "long",
    day: "numeric",
  };
  const date = new Date(dateString);
  return new Intl.DateTimeFormat("zh-CN", options).format(date);
}

