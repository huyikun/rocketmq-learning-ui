---
import { ProductCard } from "@/components/home/PanoramicView/ProductCard";
import { EVENTS_PRODUCTS } from "@/constant";
---

<div class="event-box">
  <div class="platform h-[2.625rem] leading-[2.625rem] rounded-md text-sm">
    事件驱动架构平台
  </div>
  <div class="event-products">
    {
      EVENTS_PRODUCTS.map((it) => (
        <ProductCard
          className="event-product"
          item={it}
          client:load
          direction="bottom"
          hoverable={true}
        />
      ))
    }
  </div>
  <div class="rmq-c h-[2.5rem] leading-[2.5rem] text-xs">
    Apache RocketMQ as Core
  </div>
</div>

<style is:global>
  .event-box {
    padding: 1.125rem;
    text-align: center;
    opacity: 1;
    border: 0.75px solid transparent;
    border-radius: 8px;
    background-image: linear-gradient(to right, #000, #000),
      linear-gradient(44deg, #eedafc, #ff6a00);
    background-clip: padding-box, border-box;
    background-origin: border-box;

    .platform {
      background: #1e1d1d;
    }
    .event-products {
      margin: 0.75rem 0 0 0;
      display: flex;
      flex-wrap: wrap;
      margin-right: -0.75rem; /* 补偿右外边距的合并 */

      .event-product {
        flex: 0 0 calc(33.33% - 0.75rem); /* 每个元素占25%的宽度并减去1rem的右外边距 */
        margin-right: 0.75rem;
        background: #1e1d1d;
        margin-bottom: 0.75rem;
      }

      .event-product:nth-child(3n) {
        margin-right: 0;
      }
    }

    .rmq-c {
      opacity: 1;
      /* background-color: #1e1d1d; */
      border: 1.1px solid transparent;
      border-radius: 6px;
      background-image: linear-gradient(to right, #161312, #161312),
        linear-gradient(
          85deg,
          rgba(238, 218, 252, 0.5),
          rgba(255, 106, 0, 0.5),
          rgba(83, 68, 56, 0.5)
        );
      background-clip: padding-box, border-box;
      background-origin: border-box;
    }
  }



  @media (max-width: 50rem) {
    .event-box {
      .event-products {
        margin: 0.75re m 0 0 0;
        display: flex;
        flex-wrap: wrap;
        margin-right: -0.75rem; /* 补偿右外边距的合并 */

        .event-product {
          flex: 0 0 calc(50% - 0.75rem); /* 每个元素占25%的宽度并减去1rem的右外边距 */
          margin-right: 0.75rem;
          background: #1e1d1d;
          margin-bottom: 0.75rem;
        }

        .event-product:nth-child(2n) {
          margin-right: 0;
        }
        .event-product:nth-child(3n) {
          margin-right: 0.75rem;
        }
      }
    }
  }
</style>
