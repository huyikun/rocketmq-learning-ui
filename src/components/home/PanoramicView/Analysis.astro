---
// import ProductCard from "@components/home/PanoramicView/ProductCard.astro";
import { ServiceCard } from "@/components/home/PanoramicView/ServiceCard";
import { ProductCard } from "@/components/home/PanoramicView/ProductCard";

const { data, title, type = "one", hoverable = false } = Astro.props;
---

<div class="ana-box">
  <div class="h-[3.5rem] leading-[3.5rem] text-left text-lg">{title}</div>
  {
    type === "two" ? (
      <div class="service-box">
        {data.map((it) => (
          <ServiceCard
            client:load
            item={it}
            direction="rb"
            hoverable={hoverable}
          />
        ))}
      </div>
    ) : (
      <div>
        {data.map((it) => (
          <ProductCard
            client:load
            item={it}
            direction={type === "events" ? "lb" : "top"}
            hoverable={hoverable}
          />
        ))}
      </div>
    )
  }
</div>

<style is:global>
  .ana-box {
    padding: 0 1rem;
    text-align: center;
    opacity: 1;
    border: 2px solid #4c505d;
    border-radius: 12px;
    background: #161312;
  }

  .service-box {
    display: flex;
    flex-wrap: wrap;
    margin-right: -1rem;
  }
</style>
