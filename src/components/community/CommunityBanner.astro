---
import { useTranslations } from "@i18n/util";
import { twMerge } from "tailwind-merge";

const t = useTranslations(Astro);
const { data } = Astro.props;

function formatDate(dateString) {
  const options: Intl.DateTimeFormatOptions = {
    year: "numeric",
    month: "long",
    day: "numeric",
  };
  const date = new Date(dateString);
  return new Intl.DateTimeFormat("en-US", options).format(date);
}
---

<div class={twMerge("card bg-card p-[12px] w-full flex")}>
  <div class="w-[36%] h-[13.06rem]">
    <img src={data.img} class="rounded-lg"/>
  </div>
  <a href={data.href} class="w-[64%] pl-[24px]">
    <div class="text-xs mt-[24px] mb-[24px] flex p">
      <div>{data.time}</div>
      <div class="ml-[2.5rem]">{data.des}</div>
    </div>
    <h3
      class="text-model leading-[2.625rem] h-[7rem] overflow-hidden"
    >
      <div class="community-title">
        {data.title}
      </div>
    </h3>
    <div class="p text-xs">
      嘉宾：{data?.introduction?.map((it) => it.author + ' ')}
    </div>
  </a>
</div>

<style>
  .card {
    margin-bottom: 1.5625rem;
    flex-direction: row;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
    img {
      width: 100%;
      height: 100%;
    }
    h3 {
      font-size: 1.75rem;
      font-weight: 500;
    }
    .p {
      color: #9295a5;
    }
  }
  a {
    text-decoration: none;
    color: inherit;
  }

  .simple-card-desc {
    width: 100%;
    overflow: hidden;

    .multiline-text {
      color: #121316;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 3; /* 控制显示的行数 */
      overflow: hidden;
      text-overflow: ellipsis;
    }
  }

  .community-title {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2; /* 控制显示的行数 */
    overflow: hidden;
    text-overflow: ellipsis;
  }

  @media (max-width: 50rem) {
    .banner-des {
      width: 100%;
      display: block;
    }
  }
</style>
